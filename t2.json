{
  "InstanceType": "t2.micro",
  "ImageId": "ami-0cfbf4f6db41068ac",
  "KeyName": "free.aws.t2.micro",
  "SecurityGroups": [
      "launch-wizard-1"
  ],
  
  "Placement": {
      "AvailabilityZone": "eu-central-1b"
  },
  "Resources": {
    "WebServerInstance": {
      "Type": "AWS::EC2::Instance",
      "Metadata" : {
      "AWS::CloudFormation::Init" : {
          "configSets" : {
            "Install" : [ "Install" ]
          },

          "Install" : {
            "packages" : {
              "yum" : {
                "httpd"        : []
              }
            },

            "files" : {
              "/var/www/html/index.html" : {
                "Hello world! AWS ec2 instance is running!"
              },
                "mode"  : "000600",
                "owner" : "apache",
                "group" : "apache"
              }
            },
            "services" : {
              "sysvinit" : {  
                "httpd"   : { "enabled" : "true", "ensureRunning" : "true" }
              }
            }
          }
      },
}
